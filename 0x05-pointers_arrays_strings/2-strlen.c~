#include "main.h"
/**
_strlen - compute the length of a string.
*@s: string
*@len: length of the character
*@*s: pointer
*Return : nothing
*/

int _strlen(char *s)
{
int len = 0; //declaring an int with it i count how many letters in the word-length//
while(*s != '\0') //adress of the string i want to count it means there is already a string'//
{
len++;
s++;
}
return (len);
}
int main()
{
char str[] = "hello, world!";
int len = _strlen(str);
printf("the length of a string is : %d\n", len);
return (0);
}
